# Interactive Story Game - Environment Variables
# Copy this to .env and fill in your values

# Game Settings
GAME_MODE=game  # 'story' or 'game'
DIFFICULTY=normal  # 'easy', 'normal', 'hard'
MAX_PLAYERS=8
AI_SLOTS=0

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Database
DATABASE_URL=sqlite:///game.db

# AI/API Keys
OPENAI_API_KEY=
HUGGING_FACE_TOKEN=

# Optional Features
ENABLE_PDF_EXPORT=false
ENABLE_IMAGE_GENERATION=false
